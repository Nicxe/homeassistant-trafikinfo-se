{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ New features" },
            { "type": "fix", "section": "ðŸ› Bug fixes" },
            { "type": "docs", "section": "ðŸ“š Documentation" },
            { "type": "refactor", "section": "ðŸ§¹ Refactoring" },
            { "type": "chore", "section": "ðŸ”§ Maintenance" },
            { "type": "*", "section": "ðŸ“¦ Other changes" }
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "jq '.version = \"${nextRelease.version}\"' custom_components/trafikinfo_se/manifest.json > manifest.tmp && mv manifest.tmp custom_components/trafikinfo_se/manifest.json && cd custom_components && zip -r trafikinfo_se.zip trafikinfo_se"
      }
    ],
    [
      "@semantic-release/github",
      {
        "draft": true,
        "assets": [
          {
            "path": "custom_components/trafikinfo_se.zip",
            "label": "trafikinfo_se.zip"
          }
        ]
      }
    ]
  ]
}
